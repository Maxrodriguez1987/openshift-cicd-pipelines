pipeline {
    agent any
    options {
        skipDefaultCheckout()
        disableConcurrentBuilds()
        timeout(time: 20, unit: 'MINUTES')
    }
    stages {
        stage("Set Project") {
            when {
                not {
                    expression {
                        return env.PROJECT
                    }
                }
            }
            steps {
                script {
                     env.PROJECT = input(id: 'project',
                                         message: 'Select the project where the tag to deploy resides',
                                         parameters: [string(defaultValue: '', name: 'Project')]);
                }
            }
        }
        stage("Apply Objects") {
            steps {
                script {
                    openshift.withCluster {
                        openshift.withProject() {
                            objects = openshift.process("${env.APP_TEMPLATE}", "-p", "PARAM_APP_NAME=${env.APP_NAME}", "-n", "${env.PROJECT}");

                            for (o in objects) {
                                if (o.kind != "BuildConfig" && o.kind != "ImageStream") 
                                    openshift.apply(o);
                            }
                        }
                    }
                }
            }
        }
        stage("Select Tag") {
            when {
                not {
                    expression {
                        return env.TAG
                    }
                }
            }
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject("${env.PROJECT}") {
                            def is = openshift.selector("is", env.APP_NAME, "-n", env.PROJECT).object();
                            def tags = "";
                            
                            for (tag in is.spec.tags)
                                tags = tag.name + "\n" + tags; 
                            
                            env.TAG = input(message: "Select version",
                                            parameters: [choice(choices: tags, description: '', name: 'Versions')]);
                        }
                    }
                }
            }
        }
        stage("Deploy Application") {
            steps {
                script {
                    openshift.withCluster() {
                        openshift.withProject() {
                            openshift.set("triggers", "dc/${env.APP_NAME}", "--from-image=${env.IMAGE_NAME}:${env.TAG}", "-c ${env.APP_NAME}");
                        } 
                    }
                }
            }
        }
    }
}